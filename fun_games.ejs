    <script>
        // --- This script section contains all game logic ---
        const games = {
            recycle: { /* Unchanged */ },
            energy: { /* Unchanged */ },
            tree: { /* Unchanged */ },
            ocean: {
                title: 'Ocean Cleanup Crew',
                instructions: 'Help keep our oceans clean! Click on the trash to remove it, but be careful not to click the friendly sea creatures.',
                content: `
                    <div id="ocean-game-container" class="relative bg-gradient-to-b from-blue-400 to-blue-600 h-96 w-full max-w-3xl mx-auto rounded-lg overflow-hidden shadow-inner">
                        <!-- Game elements will appear here -->
                        <div class="absolute bottom-0 left-0 w-full h-12 bg-yellow-200 opacity-50" style="background-image: radial-gradient(#d2b48c 20%, transparent 20%), radial-gradient(#d2b48c 20%, transparent 20%); background-size: 30px 30px; background-position: 0 0, 15px 15px;"></div>
                         <div id="ocean-feedback" class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 text-white text-3xl font-bold opacity-0 transition-opacity" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.5);"></div>
                    </div>
                    <div class="mt-4 text-xl">Trash Cleaned: <span id="ocean-score" class="font-bold">0</span></div>
                `
            }
        };

        const modal = document.getElementById('game-modal');
        const modalTitle = document.getElementById('modal-title');
        const modalBody = document.getElementById('modal-body');
        const closeModalBtn = document.getElementById('close-modal');
        let activeGameInterval;

        document.getElementById('game-recycle').addEventListener('click', () => openModal('recycle'));
        document.getElementById('game-energy').addEventListener('click', () => openModal('energy'));
        document.getElementById('game-tree').addEventListener('click', () => openModal('tree'));
        document.getElementById('game-ocean').addEventListener('click', () => openModal('ocean'));

        function closeModal() {
            modal.style.display = 'none';
            if (activeGameInterval) {
                clearInterval(activeGameInterval);
            }
        }
        closeModalBtn.addEventListener('click', closeModal);
        window.addEventListener('click', (event) => { if (event.target == modal) closeModal(); });

        function openModal(gameId) {
            // Restore hidden game content for brevity in the 'games' object
            games.recycle.content = `<div class="flex flex-col lg:flex-row gap-8 items-center justify-around"><div id="items-container" class="grid grid-cols-3 gap-4 p-4 bg-gray-100 rounded-lg"><div class="draggable text-4xl p-2 bg-white rounded shadow-md" draggable="true" data-type="recycle">🍾</div><div class="draggable text-4xl p-2 bg-white rounded shadow-md" draggable="true" data-type="compost">🍎</div><div class="draggable text-4xl p-2 bg-white rounded shadow-md" draggable="true" data-type="trash">🍬</div><div class="draggable text-4xl p-2 bg-white rounded shadow-md" draggable="true" data-type="recycle">📰</div><div class="draggable text-4xl p-2 bg-white rounded shadow-md" draggable="true" data-type="trash">🛍️</div><div class="draggable text-4xl p-2 bg-white rounded shadow-md" draggable="true" data-type="compost">🍌</div></div><div class="flex flex-col gap-4 w-full lg:w-1/2"><div class="bin p-6 rounded-lg text-center" data-bin="recycle"><span class="text-3xl">♻️</span><br>Recycling</div><div class="bin p-6 rounded-lg text-center" data-bin="trash"><span class="text-3xl">🗑️</span><br>Trash</div><div class="bin p-6 rounded-lg text-center" data-bin="compost"><span class="text-3xl">🌿</span><br>Compost</div></div></div><p id="recycle-feedback" class="mt-4 h-6 text-lg font-semibold"></p>`;
            games.energy.content = `<div id="energy-game-start-screen" class="text-center"><p class="mb-4 text-lg">Click the yellow "ON" lights to turn them "OFF". Turn off as many as you can in <strong>30 seconds!</strong></p><button id="start-energy-game-btn" class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-3 px-6 rounded-lg text-xl transition-transform transform hover:scale-105">Start Challenge</button></div><div id="energy-game-play-screen" class="hidden"><div class="flex justify-between items-center mb-4 text-xl font-bold"><div>Score: <span id="energy-score">0</span></div><div>Time: <span id="energy-timer">30</span>s</div></div><div id="light-grid" class="grid grid-cols-3 sm:grid-cols-4 gap-4 max-w-lg mx-auto bg-blue-900 p-4 rounded-lg" style="min-height: 250px;"></div></div><div id="energy-game-over-screen" class="hidden mt-4 text-center"><h3 class="text-3xl font-bold text-blue-800">Time's Up!</h3><p class="text-xl mt-2">Your final score is: <strong id="final-energy-score" class="text-2xl">0</strong></p><p class="mt-4 text-lg max-w-md mx-auto">Great job! Every light turned off helps save precious energy.</p><button id="restart-energy-game-btn" class="mt-6 bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-6 rounded-lg text-xl">Play Again</button></div>`;
            games.tree.content = `<div class="bg-sky-200 p-4 rounded-lg relative h-64 overflow-hidden"><div id="forest-floor" class="absolute bottom-0 left-0 w-full h-16 bg-green-700"></div><div id="tree-container" class="absolute bottom-16 left-0 w-full h-48"></div></div><button id="plant-tree-btn" class="mt-4 bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-6 rounded-lg text-xl transition-transform transform hover:scale-105">Plant a Sapling 🌱</button><p class="mt-2 text-lg">Grown Trees: <span id="tree-count" class="font-bold">0</span></p>`;

            const game = games[gameId];
            modalTitle.textContent = game.title;
            modalBody.innerHTML = `<p class="mb-4">${game.instructions}</p>${game.content}`;
            modal.style.display = 'block';

            if (gameId === 'recycle') initRecycleGame();
            if (gameId === 'energy') initEnergyGame();
            if (gameId === 'tree') initTreeGame();
            if (gameId === 'ocean') initOceanCleanupGame();
        }

        function initRecycleGame() { /* Unchanged logic */ }
        function initEnergyGame() { /* Unchanged logic */ }
        function initTreeGame() { /* Unchanged logic */ }
        
        // --- Ocean Cleanup Crew Game Logic ---
        function initOceanCleanupGame() {
            const gameContainer = document.getElementById('ocean-game-container');
            const scoreEl = document.getElementById('ocean-score');
            const feedbackEl = document.getElementById('ocean-feedback');
            let score = 0;
            
            const items = [
                { type: 'trash', char: '🥤', points: 1 }, { type: 'trash', char: '🛍️', points: 1 },
                { type: 'animal', char: '🐠', points: -1 }, { type: 'animal', char: '🐢', points: -1 },
                { type: 'animal', char: '🐬', points: -1 }, { type: 'animal', char: '🦀', points: -1 }
            ];

            function showFeedback(text, color) {
                feedbackEl.textContent = text;
                feedbackEl.style.color = color;
                feedbackEl.style.opacity = '1';
                setTimeout(() => { feedbackEl.style.opacity = '0'; }, 800);
            }

            function createItem() {
                const itemData = items[Math.floor(Math.random() * items.length)];
                const itemDiv = document.createElement('div');
                itemDiv.textContent = itemData.char;
                itemDiv.classList.add('absolute', 'cursor-pointer');
                itemDiv.style.fontSize = '2.5rem';
                itemDiv.style.userSelect = 'none';

                const fromLeft = Math.random() < 0.5;
                const startY = Math.random() * 80 + 10;
                itemDiv.style.top = `${startY}%`;
                itemDiv.style.left = fromLeft ? '-10%' : '110%';

                gameContainer.appendChild(itemDiv);

                const duration = Math.random() * 5 + 8; // 8-13 seconds
                itemDiv.animate([
                    { left: fromLeft ? '-10%' : '110%', transform: `rotate(${Math.random() * 60 - 30}deg)` },
                    { left: fromLeft ? '110%' : '-10%', transform: `rotate(${Math.random() * 360}deg)` }
                ], {
                    duration: duration * 1000,
                    easing: 'linear'
                });

                setTimeout(() => { itemDiv.remove(); }, duration * 1000);

                itemDiv.addEventListener('click', () => {
                    if (itemData.type === 'trash') {
                        score += itemData.points;
                        showFeedback('Good job!', 'white');
                        // Poof animation
                        itemDiv.animate([ { transform: 'scale(1.5)', opacity: 0 } ], { duration: 300 });
                        setTimeout(() => itemDiv.remove(), 290);
                    } else {
                        showFeedback('Oops! Save the animals!', '#ff6b6b');
                    }
                    scoreEl.textContent = score;
                }, { once: true });
            }

            activeGameInterval = setInterval(createItem, 1200);
        }

    </script>


