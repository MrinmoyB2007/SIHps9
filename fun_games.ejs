     <style>
        body {
            font-family: 'Nunito', sans-serif;
            background: linear-gradient(180deg, #2a9df4 0%, #76c5f8 50%, #a1dff5 100%);
            overflow-x: hidden;
        }

        .sun {
            width: 100px;
            height: 100px;
            background: #FFD700;
            border-radius: 50%;
            position: absolute;
            top: 50px;
            left: 50px;
            box-shadow: 0 0 50px rgba(255, 223, 0, 0.9);
            animation: spin 30s linear infinite;
        }

        .cloud {
            position: absolute;
            background: white;
            border-radius: 50%;
            opacity: 0.9;
            animation: drift 60s linear infinite alternate;
        }

        .cloud1 { top: 15%; left: 10%; width: 120px; height: 40px; }
        .cloud2 { top: 25%; left: 80%; width: 150px; height: 50px; animation-duration: 70s; }
        .cloud3 { top: 5%; left: 40%; width: 100px; height: 30px; animation-duration: 50s; }

        .cloud:before, .cloud:after {
            content: '';
            position: absolute;
            background: white;
            border-radius: 50%;
        }
        .cloud:before { width: 60px; height: 60px; top: -30px; left: 20px; }
        .cloud:after { width: 80px; height: 80px; top: -40px; right: 10px; }

        @keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        @keyframes drift {
            from { transform: translateX(-200px); }
            to { transform: translateX(200px); }
        }
        
        .game-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .game-card:hover {
            transform: translateY(-10px) scale(1.05);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }
        
        /* Modal Styles */
        .modal {
            display: none; position: fixed; z-index: 50;
            left: 0; top: 0; width: 100%; height: 100%;
            overflow: auto; background-color: rgba(0,0,0,0.5);
            animation: fadeIn 0.3s ease-in-out;
        }
        
        .modal-content {
            position: relative; margin: 8% auto;
            border-radius: 1rem;
            animation: slideIn 0.4s ease-in-out;
        }
        
        @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
        @keyframes slideIn { from { transform: translateY(-50px); opacity: 0; } to { transform: translateY(0); opacity: 1; } }

        /* Sorting Game Specific Styles */
        .draggable { cursor: grab; user-select: none; }
        .dragging { opacity: 0.5; transform: scale(1.1); }
        .bin { border: 2px dashed #ccc; transition: all 0.3s; }
        .bin.over { background-color: #e0ffe0; border-color: #28a745; transform: scale(1.05); }
        
        /* New Main Scene SVG Animations */
        .earth-spin { animation: earthSpin 25s linear infinite; transform-origin: center; }
        @keyframes earthSpin { from { transform: rotate(0deg); } to { transform: rotate(360deg); } }
        
        .kid-wave { animation: kidWave 2s ease-in-out infinite alternate; transform-origin: 80% 90%; }
        @keyframes kidWave { from { transform: rotate(-10deg); } to { transform: rotate(10deg); } }

        .plant-grow { animation: plantGrow 4s ease-in-out infinite; transform-origin: bottom; }
        @keyframes plantGrow { 
            0%, 100% { transform: scaleY(1); } 
            50% { transform: scaleY(1.1); }
        }
        .shooting-star { position: absolute; height: 2px; background: linear-gradient(-45deg, rgba(255,255,255,1), rgba(255,255,255,0)); filter: drop-shadow(0 0 6px #fff); animation: tail 3s ease-in-out infinite, shooting 3s ease-in-out infinite; }
        @keyframes tail { 0% { width: 0; } 30% { width: 100px; } 100% { width: 0; } }
        @keyframes shooting { 0% { transform: translateX(0); } 100% { transform: translateX(300px); } }

    </style>
